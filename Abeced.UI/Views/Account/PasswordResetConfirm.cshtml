    {
        background-color: hsl(193, 32%, 72%) !important;
        background-repeat: repeat-x;
        filter: progid:DXImageTransform.Microsoft.gradient(startColorstr="#f8fafb", endColorstr="#a0c4ce");
        background-image: -khtml-gradient(linear, left top, left bottom, from(#f8fafb), to(#a0c4ce));
        background-image: -moz-linear-gradient(top, #f8fafb, #a0c4ce);
        background-image: -ms-linear-gradient(top, #f8fafb, #a0c4ce);
        background-image: -webkit-gradient(linear, left top, left bottom, color-stop(0%, #f8fafb), color-stop(100%, #a0c4ce));
        background-image: -webkit-linear-gradient(top, #f8fafb, #a0c4ce);
        background-image: -o-linear-gradient(top, #f8fafb, #a0c4ce);
        background-image: linear-gradient(#f8fafb, #a0c4ce);
        border-color: #a0c4ce #a0c4ce hsl(193, 32%, 65.5%);
        color: #333 !important;
        text-shadow: 0 1px 1px rgba(255, 255, 255, 0.42);
        -webkit-font-smoothing: antialiased;
    }
</style>

<script type="text/javascript">
    
    function OnSuccessReg(ajaxContext) {
        $('#targetDivReg').empty();

        var savresp = ajaxContext.savans;
        var sdivtag = document.getElementById("sdiv");
        if (savresp == "success") {
            $('.rssedReg').empty();
            $('<span class="alert alert-success" style="display: block;font-size: 120%">A<b> PASSWORD RESET</b> successful </span>').appendTo('.rssedReg');
            sdivtag.style.display = "none";
        }
        else if (savresp == "invaliduser") {
            $('.rssedReg').empty();
            $('<span class="alert alert-error" style="display: block;font-size: 120%"><b> INVALID USER : </b> Your Userid does not exist on the system. </br> Please Contact the Faculty officers.  </span>').appendTo('.rssedReg');

            
        }

        else if (savresp == "cerr") {
            $('.rssedReg').empty();
            $('<span class="alert alert-error" style="display: block;font-size: 120%"><b>You did not type the verification word correctly. Please try again. </span>').appendTo('.rssedReg');
        }
        else {
            $('.rssedReg').empty();
            $('<span class="alert alert-error" style="display: block;font-size: 120%"><b> ERROR : </b> Error Occurred on page. Please see the Faculty officers.  </span>').appendTo('.rssedReg');
        }

    }
    function OnFailureReg(ajaxContext) {
        $('.rssedReg').empty();
        $('<span class="alert alert-error" style="display: block;font-size: 120%"><b> ERROR : </b> Error Occurred on page. Please see the Faculty officers.  </span>').appendTo('.rssedReg');
    }

</script>
