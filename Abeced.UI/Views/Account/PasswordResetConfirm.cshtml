@model Abeced.UI.Models.ChangePasswordModel
@{
    ViewBag.Title = "Reset Password";
}
<br />
<br />
<br />
<div id="login" class="rounded-corners" style="border: 1px solid #2F5469">
    <div style="text-align: center">
        <h1 style="font-size: 30px; color: #0B4975">
            Reset Your Password </h1>
    </div>
    <fieldset id="inputs" style="text-align: center">
        <p>
            Click @Html.ActionLink("here", "LogOn", "Account") to login with your new password.</p>
            @using (Ajax.BeginForm("PasswordResetConfirm", "Account", new { gid = ViewData["gid"] },
            new AjaxOptions
            {
                HttpMethod = "POST",
                UpdateTargetId = "targetDivReg",
                OnSuccess = "OnSuccessReg",
                OnFailure = "OnFailureReg",
                InsertionMode = InsertionMode.Replace


            },
            new
            {
                @id = "submitFormPub",
                @class = "form-horizontal"
            }))
            { 

@Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "Reset was unsuccessful. Please correct the errors and try again.", new { @class = "alert alert-block alert-error" })
    
    
            <div id="targetDivReg" class="rssedReg" style="padding-right: 20px; padding-left: 20px;
                font-family: Trebuchet MS,Verdana,Helvetica,Arial,sans-serif;">
            </div>
            <div id="sdiv">
            <div class="control-group" style=" border-bottom: 1px solid #fff;">
                <div class="control-label">
                    @Html.LabelFor(m => m.NewPassword)
                </div>
                <div class="controls" style="width:280px;text-align:left">
                    <span style="color: #B94A48">*</span> @Html.PasswordFor(m => m.NewPassword, new { @class = "required" }) 
                     
                    <br />
                    @Html.ValidationMessageFor(m => m.NewPassword)
                </div>
            </div>
            <div class="control-group" style="border-bottom: 1px solid #fff;">
                <div class="control-label">
                    @Html.LabelFor(m => m.ConfirmPassword)
                </div>
                <div class="controls" style="width:280px;text-align:left">
                    <span style="color: #B94A48">*</span> @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "required" })<br />
                    @Html.ValidationMessageFor(m => m.ConfirmPassword)
                </div>
            </div>
            <div class="control-group" id="regbutton" style="border-bottom: 1px solid #fff;text-align:left">
                <div class="control-label">
                @Html.Hidden("OldPassword", Guid.NewGuid().ToString().Split('-')[0])
                </div>
                <div class="controls">
                    <input type="submit" value="Reset Password" class="btn btn-large btn-custom" style="width: 150px" />
                </div>
            </div>
            </div>
            @*<div class="control-group" style="display: none; border-bottom: 1px solid #fff;"
                id="aftersuccess">
                <div class="control-label">
                </div>
                <div class="controls">
                    @Html.ActionLink("Login", "LogOn", "Account", new { @class = "btn btn-large btn-custom", @style = "width:150px" })
                    <button type="button" class="btn btn-large btn-custom2" id="closeid" style="width: 150px">
                        Close</button>
                </div>
            </div>*@
      
    
   
            }
    </fieldset>
</div>
<style>
