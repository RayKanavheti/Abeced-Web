                                                        .Name("Cfiles")
                                                        .HtmlAttributes(new { style="width:265"})
                                                        .Events(events => events
                                                        .Select("onSelectLimitFile")

                                                        )
                                                        .HtmlAttributes(new { accept = "image/*" })

                                                    )
                                                </div>
                                            </td>
                                        </tr>
                                       
                                    </tbody>
                                </table>
                            </td>
                        </tr>
                    </table>
                </td>
            </tr>
            <tr align="left">


