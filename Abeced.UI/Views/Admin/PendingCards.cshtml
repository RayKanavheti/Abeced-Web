    $("#btnApproveMsg").click(function (e) {
        e.preventDefault();

        //var staffid = dataItem.StaffID;
        $("#windowmsg").append("<div id='getmsgwindow'></div>");

        var wnd2 = $("#getmsgwindow").kendoWindow({
