@model Abeced.UI.Models.ChangePasswordModel
@{
    ViewBag.Title = "Change Password";
    Layout = "~/Views/Shared/_LayoutProfile.cshtml";
}
<h4 class="alert_info" style="font-weight:normal">
    Please change your password. New passwords are required to be a minimum of @Membership.MinRequiredPasswordLength characters in length.
</h4>


<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

<article class="module width_full">
			<header><h3>Change Your Password</h3></header>

<div class="module_contentchange">
            <article class="stats_overviewchange">
@using (Html.BeginForm()) {
    @Html.ValidationSummary(true, "Password change was unsuccessful. Please correct the errors and try again.")
    
    <table  cellspacing="0" style="padding-bottom:8px; width:100%" > 

      
    <tr  > 

        <td align="right" style="padding-bottom:12px">
        <label for="name" style="color:Black">Current Password</label>
        </td>
        <td align="left" style="padding-bottom:12px">
        @Html.PasswordFor(m => m.OldPassword, new { @class = "me" }) <br />
         @Html.ValidationMessageFor(m => m.OldPassword)
        </td>
    </tr>

   
    <tr >

        <td align="right" style="padding-bottom:12px">
        <label for="name" style="color:Black">New Password</label>
        </td>
        <td align="left" style="padding-bottom:12px">
        @Html.PasswordFor(m => m.NewPassword, new { @class = "me" }) <br />
         @Html.ValidationMessageFor(m => m.NewPassword)
        </td>
  </tr>  
    

    <tr >
  
        <td align="right" style="padding-bottom:12px">
        <label for="name" style="color:Black">Confirm New Password</label>
        </td>
        <td align="left" style="padding-bottom:12px">
        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "me" })<br />
         @Html.ValidationMessageFor(m => m.ConfirmPassword)
        </td>
    </tr>
   
    <tr align=center>
        <td style="padding-bottom:12px" align=center colspan="2">
        <button   class="k-button"  >Change Password</button>
           @* <input type="submit" value="Change Password" class="btn btn-primary" />*@
        </td>
       
      </tr>
    </table>
}
</article>
</div>
</article><!-- end of stats article -->


