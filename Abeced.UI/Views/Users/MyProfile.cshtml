@model Abeced.UI.Models.RegisterModel
@{
    ViewBag.Title = "UserProfile";
    Layout = "~/Views/Shared/_LayoutProfile.cshtml";
}

<div class="col-md-12">
		
		<div class="panel panel-primary" data-collapsed="0">
		
			<div class="panel-heading">
				<div class="panel-title">
					User Profile
				</div>
				
				<div class="panel-options">
					<a href="#sample-modal" data-toggle="modal" data-target="#sample-modal-dialog-1" class="bg"><i class="entypo-cog"></i></a>
					<a href="#" data-rel="collapse"><i class="entypo-down-open"></i></a>
					<a href="#" data-rel="reload"><i class="entypo-arrows-ccw"></i></a>
					<a href="#" data-rel="close"><i class="entypo-cancel"></i></a>
				</div>
			</div>
			
			<div class="panel-body">
                @using (Ajax.BeginForm("MyProfile", "Users",
        new AjaxOptions { HttpMethod = "Post" }, 
        new
        {
            @id = "submitForm"
        }))
        {
                <table cellspacing="20px" cellpadding="20px" width="800px">
                        <tr >
                            <td class="text-right" style="padding-right:10px"> Last Name </td>                    
                            <td>@Html.TextBoxFor(m => m.LastName, new { placeholder = "Last Name", @class="form-control" }) </td>
                            
                            <td class="text-right" style="padding-right:10px">First Name</td>
                            <td> @Html.TextBoxFor(m => m.FirstName, new { placeholder = "First Name" , @class="form-control" })</td>
                            
                        </tr>
                    <tr>
                        
                            <td colspan="4" class="text-right"> <hr  style="margin:2px"/></td>  
                            
                        </tr>
                        <tr>
                            <td class="text-right" style="padding-right:10px"> Title </td>                    
                            <td>@Html.TextBoxFor(m => m.Title, new { placeholder = "Title" , @class="form-control" }) </td>
                            
                            <td class="text-right" style="padding-right:10px">Email</td>
                            <td>@Html.TextBoxFor(m => m.Email, new { placeholder = "Email" , @class="form-control" }) </td>
                            
                        </tr>
                    <tr>
                        
                            <td colspan="4" class="text-right"> <hr  style="margin:2px"/></td>  
                            
                        </tr>
                        <tr>
                            <td class="text-right" style="padding-right:10px"> Age Group </td>                    
                            <td> @Html.DropDownListFor(m => m.AgeGroup, new List<SelectListItem>
                                {
                                  new SelectListItem{ Text = "Under 13 yrs", Value = "Under 13" },
                                  new SelectListItem{ Text = "13 - 19 yrs", Value = "13 - 19" },
                                  new SelectListItem{ Text = "20 - 30 yrs", Value = "20 - 30" },
                                  new SelectListItem{ Text = "31 - 40 yrs", Value = "41 - 50" },
                                  new SelectListItem{ Text = "41 - 50 yrs", Value = "41 - 50" },
                                  new SelectListItem{ Text = "51 - 60 yrs", Value = "51 - 60" },
                                  new SelectListItem{ Text = "61 - 70 yrs", Value = "61 - 70" },
                                  new SelectListItem{ Text = "Over 70", Value = "Over 70" } 
                                }, "Age Group", new {@class="form-control"  })</td>
                            
                            <td class="text-right" style="padding-right:10px">Gender</td>
                            <td>
                                @Html.DropDownListFor(m => m.Sex, new List<SelectListItem>
                                {
                                  new SelectListItem{ Text = "Male", Value = "Male" },
                                  new SelectListItem{ Text = "Female", Value = "Female" } 
                                }, "Gender", new { @class="form-control" })
                             </td>
                            
                        </tr>
                    <tr>
                        
                            <td colspan="4" class="text-right"> <hr  style="margin:2px"/></td>  
                            
                        </tr>
                            <tr>
                            <td class="text-right" style="padding-right:10px"> Occupation </td>                    
                            <td>@Html.TextBoxFor(m => m.Occupation, new { placeholder = "Occupation" , @class="form-control" }) </td>
                            
                            <td class="text-right" style="padding-right:10px">Educational Level</td>
                            <td>@Html.DropDownListFor(m=>m.EducLevel, new List<SelectListItem>
                                {
                                  new SelectListItem{ Text = "Primary", Value = "Primary" },
                                  new SelectListItem{ Text = "Secondary", Value = "Secondary" }, 
                                  new SelectListItem{ Text = "Graduate", Value = "Graduate" }, 
                                  new SelectListItem{ Text = "Postgraduate", Value = "Postgraduate" }, 
                                }, "Educational Level", new { @class="form-control" })
                                
                               @* @Html.TextBoxFor(m => m.EducLevel, new { placeholder = "Educational Level" })*@ </td>
                            
                        </tr>
                        <tr>
                        
                            <td colspan="4" class="text-right"> <hr  style="margin:2px"/></td>  
                            
                        </tr>
                        <tr>
                        
                            <td colspan="4" class="text-right"> <hr  style="margin:2px"/></td>  
                            
                        </tr>
                        <tr>
                            <td class="text-right" style="padding-right:10px"> User Name</td>                    
                            <td>@Html.TextBoxFor(m => m.UserName, new { placeholder = "Username" , @class="form-control" })</td>
                            
                            <td class="text-right"> &nbsp;&nbsp;</td>
                            <td></td>
                            
                        </tr>
                    <tr>
                        
                            <td colspan="4" class="text-right"> <hr  style="margin:2px"/></td>  
                            
                        </tr>
                        <tr>
                            <td class="text-right"> Prefered Number Of Cards</td>                    
                            <td>@Html.TextBoxFor(m => m.NumOfCards, new { placeholder = "Prefered Number Of Cards" , @class="form-control" })</td>
                            
                            <td class="text-right"> &nbsp;&nbsp;</td>
                            <td>&nbsp;&nbsp; </td>
                            
                        </tr>
                    <tr>
                        
                            <td colspan="4" class="text-right"> <hr  style="margin:2px"/></td>  
                            
                        </tr>
                        <tr>
                        <td colspan="2" class="text-right"></td>
                            <td> <div class="form-group">
						<div class="col-sm-offset-3 col-sm-5">
                            <br />
							<button type="submit" class="btn btn-default">Update Profile</button>
						</div>
					</div> </td>  
                            
                            <td class="text-right"> &nbsp;&nbsp;</td>  
                            
                        </tr>

                    </table>
				
				}
				
			</div>
		
		</div>
	
	</div>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
@*<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>*@
<script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.min.js")" type="text/javascript"></script>
<script type="text/javascript" src="@Url.Content("~/Scripts/flashcard.js")"></script>
