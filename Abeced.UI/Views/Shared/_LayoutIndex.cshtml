            <img class="asset left-185 sp550 t220 z1"  src="@Url.Content("~/Content/themes/abeced_main/img/slides/scene3/macbook.png")" />
            <div class="info">
                <h2>Fully Responsive <br /></h2> <h3>Works On all devices </h3>
                <a href="#">Take a tour</a>
            </div>
        </article>
        <article class="slide" id="responsive" style="background: url('@Url.Content("~/Content/themes/abeced_main/img/backgrounds/indigo.jpg')") repeat-x top center;">
            <img class="asset left-472 sp600 t120 z3"  src="@Url.Content("~/Content/themes/abeced_main/img/slides/scene4/html5.png")" />
            <img class="asset left-190 sp500 t120 z2"  src="@Url.Content("~/Content/themes/abeced_main/img/slides/scene4/css3.png")" />
            <div class="info">
                <h2>
                    Track <strong>your Study Progress</strong>
                    In Realtime
                </h2>                
            </div>
        </article>        
