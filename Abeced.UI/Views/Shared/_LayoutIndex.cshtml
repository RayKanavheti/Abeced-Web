    <section id="feature_slider" class="">
        <!-- 
            Each slide is composed by <img> and .info
            - .info's position is customized with css in index.css
            - each <img> parallax effect is declared by the following params inside its class:
            
            example: class="asset left-472 sp600 t120 z3"
            left-472 means left: -472px from the center
            sp600 is speed transition
            t120 is top to 120px
            z3 is z-index to 3
            Note: Maintain this order of params

            For the backgrounds, you can combine from the bgs folder :D
        -->
        <article class="slide" id="showcasing" style="background: url('@Url.Content("~/Content/themes/abeced_main/img/backgrounds/landscape.png')") repeat-x top center;">
            <img class="asset left-30 sp600 t120 z1" src="@Url.Content("~/Content/themes/abeced_main/img/slides/scene1/macbook.png")" />
            <div class="info">
                <h2>Making Learning Easier.</h2>
            </div>
        </article>
        <article class="slide" id="ideas" style="background: url('@Url.Content("~/Content/themes/abeced_main/img/backgrounds/aqua.jpg')") repeat-x top center;">
            <div class="info">
                <h2>Learn more facts in less time.</h2>
            </div>
            <img class="asset left-480 sp600 t260 z1" src="@Url.Content("~/Content/themes/abeced_main/img/slides/scene2/left.png")" />
            <img class="asset left-210 sp600 t213 z2" src="@Url.Content("~/Content/themes/abeced_main/img/slides/scene2/middle.png")" />
            <img class="asset left60 sp600 t260 z1" src="@Url.Content("~/Content/themes/abeced_main/img/slides/scene2/right.png")" />
        </article>
        <article class="slide" id="tour" style="background: url('@Url.Content("~/Content/themes/abeced_main/img/backgrounds/color-splash.jpg')") repeat-x top center;">
            <img class="asset left-472 sp650 t210 z3" src="@Url.Content("~/Content/themes/abeced_main/img/slides/scene3/ipad.png")" />
            <img class="asset left-365 sp600 t270 z4" src="@Url.Content("~/Content/themes/abeced_main/img/slides/scene3/iphone.png")" />
